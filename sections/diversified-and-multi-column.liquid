{% stylesheet %}
@media screen and (max-width:750px){
  .diversified-and-multi-column-list{
    flex-wrap:wrap;
  }
  .diversified-and-multi-column-heading h2{
    width:80% !important;
    margin:0 auto;
    text-align:left !important;
  }
  .diversified-and-multi-column-item{
    width:300px !important;
/*     height:290px !important; */
    margin:14px auto !important;
  }
  .diversified-and-multi-column-item img{
    height:40px;
  }
}

@media screen and (min-width:750px){
  
}
.diversified-and-multi-column{
  padding:24px 0 !important;
  border-top:4px solid black;
  border-bottom:4px solid black;
}
  
  .diversified-and-multi-column-heading{
    text-align:center;
  }
  .diversified-and-multi-column-heading img{
    width:148px;
    height:20px;
  }
  .diversified-and-multi-column-list{
    display:flex;
    justify-content:space-between;
  }
  .diversified-and-multi-column-item{
    width:260px;
    height:320px;
    margin:14px 0;
    text-align:center;
    border-radius:14px;
    box-shadow:0 0 70px #EFEFEE;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
/*     background:#F7F7F5; */
    
    
  }
  .diversified-and-multi-column-item img{
    height:60px;
    max-width:60px;
    margin: 0 auto;
  }
{% endstylesheet %}





<div class="diversified-and-multi-column page-width" >
    <div style="font-size:{{ section.settings.font_size }}px;font-weight:bold;color:black;" class="diversified-and-multi-column-heading">
      <img src={{ section.settings.image | image_url }} />
      <h2 class="">{{ section.settings.heading }}</h2>
      
    </div>

  
    <div class="diversified-and-multi-column-list">
      {% for block in section.blocks %}
        {% case block.type %}
          {%  when 'column_item' %}
          <div class="diversified-and-multi-column-item">
            <img src="{{ block.settings.image_1|image_url }}" />
            <h2 style="font-size:{{ block.settings.heading_size }}px;">{{ block.settings.heading_1 }}</h2>
            <div style="font-size:{{ block.settings.text_size }}px;">
              {{ block.settings.text_1 }}
            </div>
            <div style="font-size:{{ block.settings.text_size }}px;">
              {{ block.settings.text_2 }}
            </div>
            
          </div>
        {% endcase %}
      {% endfor %}
    </div>  
  
</div>


{% schema %}
  {
    "name": "多样化多列",
    "tag":"section",
    "class":"setion",
    "settings": [
      {
        "type":"image_picker",
        "id":"image",
        "label":"图片元素"
      },
      {
        "type":"text",
        "id":"heading",
        "label":"标题"
      },
      {
        "type":"range",
        "id": "font_size",
        "min": 12,
        "max": 100,
        "step": 2,
        "label":"标题字体大小",
        "default":24
      }
    ],
    "blocks":[
      {
        "type":"column_item",
        "name":"多列元素",
        "limit":4,
        "settings":[
          {
            "type":"image_picker",
            "id":"image_1",
            "label":"多列中的图片元素"
          },
          {
            "type":"text",
            "id":"heading_1",
            "label":"多列头部标题"
          },
          {
             "type":"range",
            "id":"heading_size",
            "min":10,
            "max":100,
            "step":2,
            "default":14,
            "label":"多列头部标题字体大小"
          },
          {
            "type":"text",
            "id":"text_1",
            "label":"多列文案1"
          },
          {
            "type":"text",
            "id":"text_2",
            "label":"多列文案2"
          },
          {
             "type":"range",
            "id":"text_size",
            "min":10,
            "max":100,
            "step":2,
            "default":14,
            "label":"多列文案字体大小"
          }
        ]
      }
    ],
     "presets":[
       {
         "name":"多样化多列",
         "blocks":[
           {"type":"column_item"}
         ]
       }
     ]
  }
{% endschema %}


