<style>
  .picture-card-content {
    display: flex;
    justify-content: space-between;
    flex-wrap:wrap;
  }
  .picture-card-item {
    margin: 14px;
    border-radius: 14px;
  }
</style>

<div id="picture-{{ section.id }}" class="picture-card">
  <div class="picture-card-box page-width">
    <div class="picture-card-content gradient">
      {%- for block in section.blocks -%}
        <div class="picture-card-item">
          <img
            src="{{ block.settings.picture-card-item  | image_url }}"
            width="156"
            height="80"
            loading="lazy" />
        </div>
      {%- endfor -%}
    </div>
  </div>

</div>

{% schema %}
  {
    "name": "图片卡片",
    "tag": "section",
    "class": "section",
    "settings": [],
    "blocks": [
      {
        "type": "pictureCard",
        "name": "图片卡片",
        "limit": 10,
        "settings": [
          {
            "type": "image_picker",
            "id": "picture-card-item",
            "label": "图片卡片"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "图片卡片",
        "blocks": [
          {
            "type": "pictureCard"
          }
        ]
      }
    ]
  }
{% endschema %}